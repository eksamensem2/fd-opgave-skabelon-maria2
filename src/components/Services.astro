---
//@ts-nocheck
const servicesData = await fetch(
  "https://frontend-design-theme.netlify.app/api/services"
).then((response) => response.json());
---

<div>
  <ul>
    {
      servicesData.services.map((service) => (
        <li>
          <h2>{service.title}</h2>
          <p>{service.description}</p>
          <a href="#0">{service.buttonText}</a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  @layer components {
    ul {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      list-style: none;
      justify-content: center;
      gap: 10px;
    }
    li {
      padding: 46px;
      flex: 1 0 0;
      border-radius: 20px;
      border: 1px solid rgba(255, 255, 255, 0.2);

      background: rgba(38, 38, 38, 0.49);

      backdrop-filter: blur(16px);

      h2 {
        color: #fff;
      }

      p {
        color: #fff;
      }

      a {
        color: #fff;
        font-family: Lato;
        /* font-size: 18px; */
        font-style: normal;
        font-weight: 600;
        line-height: 160%;
        background-color: black;
        border-radius: 20px;
        padding: 16px 31px;
        text-decoration: none;
      }
    }
  }
</style>
