---
//@ts-nocheck
const coreValue = await fetch(
  "https://frontend-design-theme.netlify.app/api/coreValues"
).then((response) => response.json());

import Buttons from "./Buttons.astro";
---

<section>
  <div class="grid_2">
    <div class="text">
      <p class="bg">growing with our clients</p>
      <h2>{coreValue.title}</h2>
      <p>{coreValue.subtitle}</p>
    </div>
    <Buttons variant="tertiary" size="large">{coreValue.button.text}</Buttons>
  </div>
  <div>
    <ul>
      {
        coreValue.values.map((value) => (
          <li>
            <h3>{value.title}</h3>
            <p>{value.description}</p>
            <button>{value.link.text}</button>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  section {
    background-color: var(--primary03-color);
    color: var(--secondary02-color);
    .bg {
      color: var(--primary03-color);
    }

    .grid_2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 150px;
      button {
        height: fit-content;
        padding: 15px 34px;
      }
    }

    ul {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      list-style: none;
      justify-content: center;
      gap: 10px;
      padding-left: 0;
      li {
        background-color: var(--secondary02-color);
        color: var(--primary03-color);
        padding: 36px 23px;
        border-radius: 20px;
      }
    }
  }
  .text {
    align-items: flex-end;
    gap: 20px;
    width: 645px;
  }

  button {
    display: left;
  }
</style>
