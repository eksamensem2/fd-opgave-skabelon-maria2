---
//@ts-nocheck
const financialProjections = await fetch(
  "https://frontend-design-theme.netlify.app/api/financialProjections"
).then((response) => response.json());
---

<section class="main">
  <div class="full">
    <div class="text">
      <div>
        <h2>{financialProjections.title}</h2>
        <p>
          {financialProjections.subtitle}
        </p>
      </div>
    </div>

    <ul role="list">
      {
        financialProjections.values.map((slider) => (
          <li>
            <h3>{slider.title}</h3>
            <p>{slider.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .main {
    background-color: #f5f5f5;
    display: grid;
    grid-column: full;
    .text {
      display: flex;
      align-items: flex-end;
      gap: 20px;
      width: 645px;
    }

    .svg {
      align-items: flex-start;
      gap: 26px;
      .right {
        background-color: var(--primary01-color);
        padding: 15px;
        border-radius: 1000px;
      }
      .left {
        background-color: var(--primary03-color);
        color: var(--secondary02-color);
        padding: 15px;
        border-radius: 1000px;
      }
    }

    .full {
      > * {
        grid-column: content;
      }

      > ul {
        scroll-snap-type: x mandatory;
        grid-column: full;
        padding-inline: max(1rem, 50% - var(--content-width) / 2);
        padding-block-end: 1rem;
        /* hvordan f√•r jeg den helt ud, muligvis dette??  */
        /* width: 100vw; */
        grid-column: 1 / -1;
        grid-column: full;

        li {
          scroll-snap-align: center;
          &:hover {
            color: var(--secondary01-color);
            background-color: var(--primary03-color);
            border: 0.5px solid var(--primary03-color);
            cursor: pointer;
          }
        }
      }
    }
  }

  ul {
    display: flex;
    gap: 1rem;
    overflow-x: auto;

    li {
      flex-basis: min(400px, 90%);
      flex-shrink: 0;
      background: #ebebeb;
      color: #595566;
      border-radius: 8px;
      font-size: 1rem;
      padding: 2.75rem 2.1875rem;
      align-self: start;
    }
  }

  .title {
    display: flex;
    width: 648px;
    flex-direction: column;
    align-items: flex-start;
    gap: 17px;
    * h3 {
      color: var(secondary03-color);
    }
    p {
      color: #595566;
    }
  }
</style>
